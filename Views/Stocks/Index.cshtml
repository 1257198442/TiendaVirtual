@model IEnumerable<TiendaVirtual.Stock>

@{
    ViewBag.Title = "Index";
}

<h2>Stock</h2>

<p>
    <!--Html.ActionLink("Create New", "Create")-->
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Producto.image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stockQuantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/image/@Html.DisplayFor(modelItem => item.Producto.image)" height="100" width="100">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producto.name)
        </td>
        <td>
            @if (item.stockQuantity == 0)
            {
                <span style="color: red;">sell out</span>
            }
            else
            {
                @Html.DisplayFor(modelItem => item.stockQuantity)
            }
        </td>
        <td>
            @Html.ActionLink("Modificar cantidad", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
